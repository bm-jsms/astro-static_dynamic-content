---
const Links = [
  {
    name: "List",
    url: "/"
  },
  {
    name: "Pages",
    url: "/pokemons/1"
  },
  {
    name: "Favorites",
    url: "/favorites"
  }
]
---

<nav class="shadow bg-slate-900">
  <div class="container flex items-center justify-center p-6 mx-auto text-gray-600 capitalize dark:text-gray-300">
    {
      Links.map(({ name, url }) => (
        <a href={url} class="text-gray-800 dark:text-gray-200 border-b-2 border-blue-500 mx-1.5 sm:mx-6">
          {name}
        </a>
      ))
    }
  </div>
</nav>
