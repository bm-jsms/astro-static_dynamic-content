---
import MainLayout from "@layouts/MainLayout.astro";
import PokemonCard from "@components/pokemon/PokemonCard.astro";

import type { PokemonListResponse } from "../interfaces/pokemon-list.response"

const res = await fetch('https://pokeapi.co/api/v2/pokemon')
const data = await res.json() as PokemonListResponse

const title = "Pokemon Static | Home"
---

<MainLayout title={title}>
	<h1 class='text-3xl text-blue-500'>Astro</h1>
	<hr />
	<section 
		area-label='"Pokemon List'
		class='grid grid-cols-1 sm:grid-cols-3 md:grid-cols-3 lg:grid-cols-5 gap-4 mt-3'
	>
	
		{data.results.map(({name, url}) => <PokemonCard name={name} url={url}/>)}
	</section>
	
</MainLayout>

