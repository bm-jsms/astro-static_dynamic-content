---
interface Props {
  name: string;
  url: string;
  big?: boolean
}

const { name, url , big = false} = Astro.props;
const id = url.split("/").at(-2)
const imageUrl = `https://raw.githubusercontent.com/PokeAPI/sprites/master/sprites/pokemon/other/official-artwork/${id}.png`
---
<!-- 
href={`/pokemons/${name}`} 
href={`/pokemon/${id}`}
-->

<a 
  href={`/pokemons/${name}`} 
  class:list={
    [
      "rounded-md flex flex-col justify-center items-center p-2",
      { border: !big, }
    ]
  }
>  
  <img transition:name={`${name}-image`} class=`${big ? "w-24 h-24" : "w-16 h-16"}` src={imageUrl} alt={name}>

  <span class={`capitalize ${big ? "text-2xl" : "text-sm"}`}> #{id} {name}</span>
</a> 